{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/master/doc/json_schema.json",
  
  // Logo/ASCII art settings
  "logo": {
    "type": "auto",
    "color": {
      "1": "#88c0d0",        // Primary color for Arch logo
      "2": "#d8dee9",        // Secondary color
      "3": "cyan"            // Additional color
    }
  },
  
  // General display settings
  "display": {
    "separator": " → ",
    "color": {
      "keys": "#88c0d0",     // Color for labels (OS, CPU, etc.)
      "title": "#88c0d0"     // Color for your username@hostname
    }
  },
  
  "modules": [
    {
      "type": "title",
      "format": "{user-name-colored}@{host-name-colored}"
    },
    
    // System Information
    {
      "type": "custom",
      "format": "  System Information"
    },
    {
      "type": "os",
      "key": "  ├ OS",
      "keyColor": "#88c0d0",
      "format": "Arch Linux"
    },
    {
      "type": "host",
      "key": "  ├ Host",
      "keyColor": "#88c0d0",
      "format": "Thinkpad T440p"
    },
    {
      "type": "kernel",
      "key": "  ├ Kernel",
      "keyColor": "#88c0d0"
    },
    {
      "type": "uptime",
      "key": "  └ Uptime",
      "keyColor": "#88c0d0"
    },
    "break",
    
    // Packages & Shell
    {
      "type": "custom",
      "format": "  Packages & Shell"
    },
    {
      "type": "packages",
      "key": "  ├ Packages",
      "keyColor": "#88c0d0"
    },
    {
      "type": "shell",
      "key": "  └ Shell",
      "keyColor": "#88c0d0"
    },
    "break",
    
    // Desktop Environment
    {
      "type": "custom",
      "format": "  Desktop Environment"
    },
    {
      "type": "wm",
      "key": "  ├ WM",
      "keyColor": "#88c0d0",
      "format": "i3"
    },
    {
      "type": "wmtheme",
      "key": "  ├ WM Theme",
      "keyColor": "#88c0d0"
    },
    {
      "type": "theme",
      "key": "  ├ Theme",
      "keyColor": "#88c0d0",
      "format": "Nordic"
    },
    {
      "type": "icons",
      "key": "  ├ Icons",
      "keyColor": "#88c0d0",
      "format": "Nordic"
    },
    {
      "type": "terminal",
      "key": "  └ Terminal",
      "keyColor": "#88c0d0",
      "format": "kitty"
    },
    "break",
    
    // Hardware
    {
      "type": "custom",
      "format": "  Hardware"
    },
    {
      "type": "cpu",
      "key": "  ├ CPU",
      "keyColor": "#88c0d0",
      "format": "i7 4712mq"
    },
    /*{
      "type": "gpu",
      "key": "  ├ GPU",
      "keyColor": "#88c0d0"
    },*/
    {
      "type": "memory",
      "key": "  └ Memory",
      "keyColor": "#88c0d0"
    },
    "break",
  
    {
      "type": "colors",
      "symbol": "circle"
    }
  ]
}
