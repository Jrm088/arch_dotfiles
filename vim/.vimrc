" Enable syntax highlighting
syntax on

" Enable file type indent on 

" Nord theme
colorscheme nord

" Better visibility settings
set number	"show line numbers
set cursorline	"highlight current line
set background=dark	"tell vim we are using dark background

" Make comments brighter/more visible
highlight Comment ctermfg=14 guifg=#88C0D0

" Change keyword color to purple
highlight Identifier ctermfg=13 guifg=#B48EAD

" Change strings to Nord red
highlight String ctermfg=1 guifg=#BF616A
